---
import Item from '~/components/collectie/GridItem.astro';
import type { Post } from '~/types';

export interface Props {
  posts: Array<Post>;
}

const { posts } = Astro.props;
---

<div class="grid grid-cols-2 lg:grid-cols-3 border-black border dark:border-neutral-500">
  {posts.map((post) => <Item post={post} />)}
</div>
