---
import '@fontsource-variable/inter';
import '@fontsource-variable/space-grotesk';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Space Grotesk Variable';
    --aw-font-serif: 'Space Grotesk Variable';
    --aw-font-heading: 'Space Grotesk Variable';

    --aw-color-primary: rgb(28, 38, 219);
    --aw-color-secondary: rgb(0, 3, 219);
    --aw-color-accent: rgb(56, 59, 216);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(32, 32, 32);

    ::selection {
      background-color: yellow;
    }
  }

  .dark {
    --aw-font-sans: 'Space Grotesk Variable';
    --aw-font-serif: 'Space Grotesk Variable';
    --aw-font-heading: 'Space Grotesk Variable';

    --aw-color-primary: rgb(28, 38, 219);
    --aw-color-secondary: rgb(27, 31, 218);
    --aw-color-accent: rgb(96, 156, 253);

    /* --aw-color-primary: rgb(102 83 255);
    --aw-color-secondary: rgb(66, 42, 250);
    --aw-color-accent: rgb(130 128 255); */

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(32, 32, 32);

    ::selection {
      background-color: yellow;
      color: black;
    }
  }
</style>
